# Qiniu CDN Configuration
QINIU_ACCESS_KEY=your_qiniu_access_key_here
QINIU_SECRET_KEY=your_qiniu_secret_key_here
QINIU_BUCKET=your_bucket_name
QINIU_ZONE=z0

# File Patterns and Paths
ARTIFACT_PATTERNS=dist/**,build/*.zip,packages/*/lib/**
SOURCE_DIR=./artifacts
CDN_BASE_PATH=assets/

# Path Mapping (JSON format)
PATH_MAPPING={"dist/": "static/", "build/": "releases/", "packages/app/lib/": "app/"}

# Post-processing
POST_PROCESS_SCRIPT=npm run optimize-assets

# Behavior Flags
CLEANUP_LOCAL=true
OVERWRITE_EXISTING=true
VERBOSE=false

# Note: Add this file to .gitignore to prevent accidental commits of secrets