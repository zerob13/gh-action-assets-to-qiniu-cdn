{
  "name": "gh-action-assets-to-qiniu-cdn",
  "version": "1.0.0",
  "description": "CLI tool to upload GitHub Action artifacts to Qiniu CDN with flexible mapping and post-processing",
  "main": "dist/index.js",
  "bin": {
    "action-to-qiniu": "./dist/cli.js"
  },
  "scripts": {
    "build": "tsc",
    "start": "bun run dist/cli.js",
    "dev": "bun run src/cli.ts -c config.example.json -v",
    "test": "bun test",
    "lint": "eslint src/**/*.ts",
    "clean": "rm -rf dist"
  },
  "keywords": [
    "cli",
    "qiniu",
    "cdn",
    "github-actions",
    "artifacts",
    "upload",
    "bun",
    "typescript"
  ],
  "author": "duskzhen",
  "license": "MIT",
  "dependencies": {
    "qiniu": "^7.8.0",
    "glob": "^10.3.0",
    "dotenv": "^16.3.0",
    "fs-extra": "^11.1.0",
    "commander": "^11.0.0",
    "chalk": "^4.1.2",
    "@octokit/rest": "^20.0.0",
    "axios": "^1.5.0",
    "ajv": "^8.12.0",
    "extract-zip": "^2.0.0"
  },
  "devDependencies": {
    "@types/bun": "^1.0.2",
    "@types/glob": "^8.1.0",
    "@types/extract-zip": "^1.7.0",
    "@types/fs-extra": "^11.0.1",
    "@types/node": "^20.5.0",
    "typescript": "^5.1.6"
  },
  "module": "src/index.ts",
  "type": "module"
}